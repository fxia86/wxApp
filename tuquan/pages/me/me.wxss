navigator {
  position: relative;
  padding: 25rpx 30rpx;
  height: 34rpx;
  background: #fff;
  /* border-bottom: 1rpx #ccc solid; */
}

navigator.mt {
  margin-top: 30rpx;
}

navigator:before {
  position: absolute;
  content: "";
  left: 30rpx;
  right: 0;
  top: 0;
  height: 1px;
  border-top: 1rpx solid #d8d8d8;
  color: #d8d8d8;
}

navigator.mt {
  margin-top: 30rpx;
}

navigator.mt:before {
  display: none;
}

navigator:after {
  position: absolute;
  content: "";
  top: 50%;
  right: 30rpx;
  width: 12rpx;
  height: 12rpx;
  border-top: 1rpx solid #999;
  border-right: 1rpx solid #999;
  transform: translate(0, -50%) rotate(45deg);
}

navigator image {
  width: 48rpx;
  height: 48rpx;
  margin-top: -6rpx;
}

.navText {
  margin: -55rpx 0 0 80rpx;
  font-size: 28rpx;
}

